<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/head') %>
  </head>
  <body>
    <%- include('../layout/header') %>
    <main>

      <%# The hashtag left of this sentence let's us comment in EJS! %>

      <%#- include('./books/example') %>
      <h4>Saved Books</h4>
      <p><%= books.length %> books in the Collection</p>
      <ul id="book-list">
        <% books.forEach(book => { %>
          <li class="book-items" data-book-id="<%= book.id %>">
            <%- include('books/detail', {book: book}) %>
            <p class="detail-button"><a href="/books/get/<%= book.id %>">View Details</a></p>
          </li>
        <% }) %>
      </ul>
    </main>
    <%- include('../layout/footer') %>
  </body>
</html>
